<div class="container mt-3">
    <%= render 'error_message', book: @book %>
    <div class="row">
        <div class="col-xs-3">

            <%= render 'users/profile', user: current_user %>

            <%= render 'new', book: @book %>

        </div>
            <div class="col-xs-9">
                <h2>Books</h2>
                <table class="table">
                    <thead class="thead-light">
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to user_path(book.user) do %>
                                    <%= attachment_image_tag book.user, :profile_image, :width => 40, :height => 40, fallback: "no_image.jpg" %>
                                <% end %>
                            </td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                            <td></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>