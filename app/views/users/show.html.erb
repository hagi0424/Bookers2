 <div class="container mt-3">
    <div class="row">
        <div class="col-xs-3">

            <%= render 'profile', user: @user %>

            <%= render 'books/new', book: @book %>

        </div>

        <div class="col-xs-9">
            <h2>Books</h2>
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <tbody>
                    <% @books.each do |book| %>
                        <tr>
                            <td><%= attachment_image_tag @user, :profile_image, :width => '40', :height => '40', format: 'jpeg', fallback: "no_image.jpg" %></td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>

        </div>
    </div>
</div>