<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :width => 100, :height => 100, format: 'jpg', fallback: "no_image.jpg" %>
<table class="table">
	<tbody>
		<tr>
			<th>name</th>
			<th><%= user.name %></th>
		</tr>
		<tr>
			<th>Introduction</th>
			<th><%= user.introduction %></th>
		</tr>
	</tbody>
</table>
<div class="row">
	<% if user == current_user %>
		<%= link_to 'Edit', edit_user_path(current_user.id), class: "btn btn-outline-secondary fi-wrench mx-auto" %>
	<% else %>
		<%= link_to 'Edit', user_path(current_user.id), class: "btn btn-outline-secondary fi-wrench mx-auto" %>
	<% end %>
</div>